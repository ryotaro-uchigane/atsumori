<div class="user_wrap">
  <div class="user_wrap_inner">
    <h1 class="user_h1 txC">ログイン</h1>

<% if @error_message %>
  <%= @error_message %>
<% end %>

<%= form_tag('/login') do %>
  <p class="user_p_input"><input  name="email" value="<%= @email %>" placeholder="メールアドレス"></p>
  <p class="user_p_input"><input type="password" name="password" placeholder="パスワード"></p>

  <p class="user_submit"><input type="submit" value="ログイン"></p>

<% end %>
<p class="user_show_p2 txC">登録していない方はこちらへ</p>
<div class="link_wrap2">
  <%= link_to '新規作成', controller: :users, action: :new %>
</div>
